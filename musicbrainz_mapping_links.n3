    d2rq:belongsToClassMap map:ReleaseGroup ;
    d2rq:property rdfs:label;
    d2rq:column "musicbrainz.release_group.name" ;
    d2rq:datatype xsd:string .
	
map:release_group_credit a d2rq:PropertyBridge ;
